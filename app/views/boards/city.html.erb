<% @page_title = "#{@city.name}同城" -%>

<% content_for :sidebar do -%>
  <h4><%= @city.name %>的活动</h4>
  <table border="0" cellspacing="5" cellpadding="5">
    <tr>
      <th>活动</th>
      <th>出发</th>
      <th>到达</th>
    </tr>
    <% @activities.each do |a| -%>
    <tr>
      <td><%= link_to a.title, activity_url(a.id) %></td>
      <td><%= a.departure.name %></td>
      <td><%= a.arrival.name %></td>
    </tr>
    <% end -%>
  </table>
<% end -%>

<div class="moderators">
  版主：<%= User.moderators_of(@city_board.board).collect {|u| link_to(u.login, user_url(u.id))}.join(", ") %>
</div>

<div class="operations">
  <%= link_to "写新帖子", new_board_topic_url(@board) %> | 
</div>

<div class="posting">
  <div class="block">
    <h3>介绍</h3>
    <p><%= @city_board.description_html %></p>
  </div>
  
  <div class="block">
    <h3>所有话题</h3>
    <table border="0" cellspacing="5" cellpadding="5">
      <% @topics.each do |t| -%>
      <tr>
        <td><%= link_to t.title, board_topic_url(@board, t) %></td>
        <td><%= link_to t.user.login, user_url(t.user) %></td>
      </tr>
      <% end -%>
    </table>
  </div>
  
  <div class="block">
    <h3>谁住 <%= @city.name %></h3>
    <%= @citizens.collect {|c| link_to c.login, user_url(c.id)}.join(", ") %>
  </div>
</div>

