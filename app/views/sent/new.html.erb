<% @page_title = "发送新的消息" %> 

<% form_for :message, :url => {:controller => "sent", :action => "create"} do |f| %>
	<p>
		<strong><%= f.label :to, "发给:" -%></strong>
		<select name="message[to][]">
			<%= options_from_collection_for_select(User.find(:all), :id, :login, @message.to) %>
		</select>
	</p>

	<p>
		<strong><%= f.label :subject, "主题:" -%></strong>
		<%= f.text_field :subject -%>
	</p>

	<p>
		<strong><%= f.label :content, "内容:" -%></strong>
		<br />
		<%= f.text_area :content %>
	</p>

	<p><%=submit_tag "写好了，发出去" -%></p>
<% end %>
