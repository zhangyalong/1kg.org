<% @page_title = "开放讨论区" -%>

<% content_for :sidebar do -%>
  <p>> <%= link_to "返回管理后台", admin_url %></p>
  <%= render :partial => "/admin/shared/operation_list" %>
<% end -%>

<div class="setting">
  <h4><%= link_to "创建开放讨论区", new_admin_board_url(:type => 'public') %></h4>
  <table border="0" cellspacing="5" cellpadding="5">
    <tr>
      <th>名称</th>
      <th>顺序</th>
    </tr>
    <% @public_boards.each do |b| -%>
    <tr>
      <td><%= link_to b.title, board_url(b.board_id) %></td>
      <td><%= b.position %></td>
    </tr>
    <% end -%>
  </table>
</div>