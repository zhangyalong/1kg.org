<% @page_title = "提交学校信息" -%>

<% content_for :sidebar do -%>
  <p>> <%= link_to "返回", schools_url %></p>
<% end -%>

<div class="posting">
  <div class="block">
    <div class="school-steps">
    		<ul>
    			<li class="first-current">1 填写学校基本信息</li>
    			<li class="middle">2 填写交通信息</li>
    			<li class="middle">3 填写学校需求</li>
    			<li class="last">4 补充其它信息<span class="hook"></span></li>
    		</ul>
    </div>    
    
    <% form_for :school, :url => schools_url(:step => 'basic') do |f| -%>
    <p><label>类型</label>
      <select id="school_category" name="school[category]">
        <% School.categories.each_with_index do |p,i| -%>
          <option value="<%= i %>" <%= "selected=\"selected\"" if @school.category==i %>><%= p %></option>
        <% end -%>
      </select>
    </p>
    
    <p><label>位于</label><%= geo_select "school", "geo" %></p>
    
    <p><label>校名</label><%= f.text_field :title, :size => 30 %></p>
    
    <% f.fields_for @school.basic do |b| -%>
      <p><label>学校地址</label><%= b.text_field :address, :size => 40 %></p>
      <p><label>邮编</label><%= b.text_field :zipcode, :size => 10 %></p>
      <p><label>校长</label><%= b.text_field :master, :size => 10 %></p>
      <p><label>学校电话</label><%= b.text_field :telephone, :size => 20 %></p>
      <p><label>年级数</label><%= b.text_field :level_amount, :size => 10 %></p>
      <p><label>班级</label><%= b.text_field :class_amount, :size => 10 %> 个</p>
      <p><label>老师</label><%= b.text_field :teacher_amount, :size => 10 %> 人</p>
      <p><label>学生</label><%= b.text_field :student_amount, :size => 10 %> 人</p>
      <p><label>是否有图书室</label><%= radio_choice b, :has_library %></p>
      <p><label>学校有图书</label><%= b.text_field :book_amount, :size => 10 %> 册</p>
      <p><label>是否有电脑</label><%= radio_choice b, :has_pc %></p>
      <p><label>学校有电脑</label><%= b.text_field :pc_amount, :size => 10 %> 台</p>
      <p><label>是否能上网</label><%= radio_choice b, :has_internet %></p>
    <% end -%>
    
    <p><label>&nbsp;</label><%= submit_tag "保存，下一步" %></p>
    <% end -%>
  </div>
</div>